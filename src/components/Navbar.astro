---
import { languages, langNames, t, getPathWithoutLang } from '@/data/i18n'
import type { Lang } from '@/data/i18n'

interface Props {
  currentPath?: string
  lang?: Lang
}

const { currentPath = '/', lang = 'es' } = Astro.props

const navLinks = [
  { href: `/${lang}`, label: t(lang, 'nav.home') },
  { href: `/${lang}/cv`, label: t(lang, 'nav.cv') },
]

const pathWithoutLang = getPathWithoutLang(currentPath)
const isActive = (href: string) => currentPath === href || (href === `/${lang}` && currentPath === `/${lang}/`)
---

<nav class="fixed top-0 left-0 right-0 z-50 border-b border-[--color-border] bg-[--color-bg]/95 backdrop-blur-lg" role="navigation" aria-label="Main navigation">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 py-3 sm:py-4 flex items-center justify-between">
    <!-- Logo -->
    <a
      href={`/${lang}`}
      class="text-base sm:text-lg font-medium text-[--color-text-bright] hover:text-[--color-accent-primary] transition-colors min-h-11 flex items-center"
      aria-label="Home - Ismael Morejón"
    >
      <span class="text-[--color-accent-violet]" aria-hidden="true">~</span>/ismael
    </a>

    <!-- Desktop Navigation -->
    <div class="hidden md:flex items-center gap-4 lg:gap-6">
      {navLinks.map(link => (
        <a
          href={link.href}
          class:list={[
            "text-sm transition-colors min-h-11 flex items-center px-2",
            isActive(link.href)
              ? "text-[--color-accent-primary]"
              : "text-[--color-text-muted] hover:text-[--color-text]"
          ]}
          aria-current={isActive(link.href) ? "page" : undefined}
        >
          <span class="text-[--color-text-dark]" aria-hidden="true">./</span>{link.label}
        </a>
      ))}

      <span class="text-[--color-border-highlight]" aria-hidden="true">|</span>

      <!-- Language Selector (Inline Pills) -->
      <div class="flex items-center gap-1" role="group" aria-label="Select language">
        {languages.map((l, i) => (
          <>
            <a
              href={`/${l}${pathWithoutLang}`}
              class:list={[
                "text-xs uppercase px-2 py-1 rounded transition-colors min-h-11 flex items-center",
                l === lang
                  ? "text-[--color-accent-primary] bg-[--color-bg-surface]"
                  : "text-[--color-text-muted] hover:text-[--color-text]"
              ]}
              aria-current={l === lang ? "true" : undefined}
              aria-label={langNames[l]}
            >
              {l}
            </a>
            {i < languages.length - 1 && (
              <span class="text-[--color-border-highlight] text-xs" aria-hidden="true">/</span>
            )}
          </>
        ))}
      </div>

      <!-- GitHub Link -->
      <a
        href="https://github.com/xSharkhy"
        target="_blank"
        rel="noopener noreferrer"
        class="text-[--color-text-muted] hover:text-[--color-accent-primary] transition-colors min-h-11 min-w-11 flex items-center justify-center"
        aria-label="GitHub profile (opens in new tab)"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
      </a>
    </div>

    <!-- Mobile Menu Button -->
    <button
      type="button"
      class="md:hidden text-[--color-text-muted] hover:text-[--color-accent-primary] transition-colors min-h-11 min-w-11 flex items-center justify-center"
      aria-expanded="false"
      aria-controls="mobile-menu"
      aria-label="Open menu"
      data-mobile-trigger
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true" data-menu-icon>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
      <svg class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true" data-close-icon>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </div>

  <!-- Mobile Menu -->
  <div
    id="mobile-menu"
    class="md:hidden border-t border-[--color-border] bg-[--color-bg]/98 backdrop-blur-lg hidden"
    data-mobile-menu
  >
    <div class="max-w-4xl mx-auto px-4 py-4 space-y-2">
      {navLinks.map(link => (
        <a
          href={link.href}
          class:list={[
            "block text-sm transition-colors min-h-11 flex items-center px-2 rounded-md",
            isActive(link.href)
              ? "text-[--color-accent-primary] bg-[--color-bg-surface]"
              : "text-[--color-text-muted] hover:text-[--color-text] hover:bg-[--color-bg-surface]"
          ]}
          aria-current={isActive(link.href) ? "page" : undefined}
        >
          <span class="text-[--color-text-dark]" aria-hidden="true">./</span>{link.label}
        </a>
      ))}

      <!-- Language Pills (Mobile) -->
      <div class="border-t border-[--color-border] pt-3 mt-3">
        <div class="flex items-center gap-2 px-2" role="group" aria-label="Select language">
          {languages.map((l, i) => (
            <>
              <a
                href={`/${l}${pathWithoutLang}`}
                class:list={[
                  "text-xs uppercase px-3 py-2 rounded-md transition-colors min-h-11 flex items-center justify-center",
                  l === lang
                    ? "text-[--color-accent-primary] bg-[--color-bg-surface] border border-[--color-accent-primary]"
                    : "text-[--color-text-muted] hover:text-[--color-text] bg-[--color-bg-surface] border border-[--color-border]"
                ]}
                aria-current={l === lang ? "true" : undefined}
                aria-label={langNames[l]}
              >
                {l}
              </a>
              {i < languages.length - 1 && (
                <span class="text-[--color-border-highlight] text-xs" aria-hidden="true">/</span>
              )}
            </>
          ))}
        </div>
      </div>

      <div class="border-t border-[--color-border] pt-2 mt-2">
        <a
          href="https://github.com/xSharkhy"
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-2 text-sm text-[--color-text-muted] hover:text-[--color-accent-primary] transition-colors min-h-11 px-2 rounded-md hover:bg-[--color-bg-surface]"
          aria-label="GitHub profile (opens in new tab)"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          GitHub
          <span class="text-xs" aria-hidden="true">↗</span>
        </a>
      </div>
    </div>
  </div>
</nav>

<script>
  // Mobile menu functionality only
  const mobileTrigger = document.querySelector('[data-mobile-trigger]') as HTMLButtonElement
  const mobileMenu = document.querySelector('[data-mobile-menu]') as HTMLElement
  const menuIcon = document.querySelector('[data-menu-icon]') as SVGElement
  const closeIcon = document.querySelector('[data-close-icon]') as SVGElement

  if (mobileTrigger && mobileMenu) {
    let isMobileOpen = false

    const toggleMobile = () => {
      isMobileOpen = !isMobileOpen
      mobileTrigger.setAttribute('aria-expanded', String(isMobileOpen))
      mobileTrigger.setAttribute('aria-label', isMobileOpen ? 'Close menu' : 'Open menu')

      if (isMobileOpen) {
        mobileMenu.classList.remove('hidden')
        menuIcon?.classList.add('hidden')
        closeIcon?.classList.remove('hidden')
      } else {
        mobileMenu.classList.add('hidden')
        menuIcon?.classList.remove('hidden')
        closeIcon?.classList.add('hidden')
      }
    }

    mobileTrigger.addEventListener('click', toggleMobile)

    // Close on escape
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && isMobileOpen) {
        toggleMobile()
        mobileTrigger.focus()
      }
    })
  }
</script>
