---
import type { SkillCategory } from '@/data/cv'
import type { Lang } from '@/data/i18n'
import { t } from '@/data/i18n'

interface Props {
  categories: SkillCategory[]
  lang?: Lang
}

const { categories, lang = 'es' } = Astro.props
---

<section class="print-section mb-8">
  <h3 class="print-title text-sm font-semibold text-[--color-accent-violet] print:text-black mb-4 uppercase tracking-wider font-mono">
    {t(lang, 'section.skills').replace('// ', '')}
  </h3>

  <div class="space-y-1">
    {categories.map(category => (
      <p class="text-sm text-[--color-text] print:text-gray-800 font-mono">
        <span class="text-[--color-accent-primary] print:text-gray-600">{category.label[lang]}:</span> {category.items.join(' Â· ')}
      </p>
    ))}
  </div>
</section>
