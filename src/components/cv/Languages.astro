---
import type { SpokenLanguage } from '@/data/cv'
import type { Lang } from '@/data/i18n'

interface Props {
  languages: SpokenLanguage[]
  lang?: Lang
}

const { languages, lang = 'es' } = Astro.props

const sectionTitle: Record<Lang, string> = {
  es: 'Idiomas',
  en: 'Languages',
  ca: 'Idiomes',
  gl: 'Idiomas'
}
---

<section class="print-section mb-8">
  <h3 class="print-title text-sm font-semibold text-[--color-accent-violet] print:text-black mb-4 uppercase tracking-wider font-mono">
    {sectionTitle[lang]}
  </h3>

  <p class="text-sm text-[--color-text] print:text-gray-800">
    {languages.map((language, i) => (
      <>
        <span class="font-medium">{language.name[lang]}</span>
        <span class="text-[--color-text-muted] print:text-gray-500 font-mono text-xs"> ({language.level[lang]})</span>
        {i < languages.length - 1 && <span class="text-[--color-text-dark] print:text-gray-400 mx-2">Â·</span>}
      </>
    ))}
  </p>
</section>
