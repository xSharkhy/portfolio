---
import type { Basics } from '@/data/cv'
import LinkedIn from '@/icons/LinkedIn.astro'
import GitHub from '@/icons/GitHub.astro'

interface Props {
  basics: Basics
}

const { basics } = Astro.props
const location = `${basics.location.city}, ${basics.location.region}`

const linkedIn = basics.profiles.find(p => p.network === 'LinkedIn')
const github = basics.profiles.find(p => p.network === 'GitHub')
---

<header class="print-header mb-8">
  <!-- Name & Title inline -->
  <div class="flex flex-col sm:flex-row sm:items-baseline sm:gap-3 mb-3">
    <h1 class="text-2xl font-bold text-[--color-text-bright] print:text-black font-sans">
      {basics.name}
    </h1>
    <h2 class="text-base text-[--color-accent-purple] print:text-gray-600 font-mono">
      {basics.label}
    </h2>
  </div>

  <!-- Contact Info Row with Icons -->
  <div class="flex flex-wrap gap-x-4 gap-y-1.5 text-sm text-[--color-text-muted] print:text-gray-600 mb-4 font-mono">
    <span class="flex items-center gap-1">
      <svg class="w-3.5 h-3.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
      </svg>
      {location}
    </span>

    <a href={`mailto:${basics.email}`} class="flex items-center gap-1 hover:text-[--color-accent-primary] transition-colors">
      <svg class="w-3.5 h-3.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
      </svg>
      {basics.email}
    </a>

    <a href={`tel:${basics.phone}`} class="flex items-center gap-1 hover:text-[--color-accent-primary] transition-colors">
      <svg class="w-3.5 h-3.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
      </svg>
      {basics.phone}
    </a>

    {linkedIn && (
      <a href={linkedIn.url} target="_blank" rel="noopener noreferrer" class="flex items-center gap-1 hover:text-[--color-accent-primary] transition-colors">
        <LinkedIn class="w-3.5 h-3.5 shrink-0" />
        /in/{linkedIn.username}
      </a>
    )}

    {github && (
      <a href={github.url} target="_blank" rel="noopener noreferrer" class="flex items-center gap-1 hover:text-[--color-accent-primary] transition-colors">
        <GitHub class="w-3.5 h-3.5 shrink-0" />
        {github.username}
      </a>
    )}

    <a href={basics.url} target="_blank" rel="noopener noreferrer" class="flex items-center gap-1 hover:text-[--color-accent-primary] transition-colors">
      <svg class="w-3.5 h-3.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
      </svg>
      ismobla.dev
    </a>
  </div>

  <!-- Introduction/Summary -->
  <p class="text-sm text-[--color-text] print:text-gray-800 leading-relaxed border-l-2 border-[--color-accent-violet] print:border-gray-400 pl-3 font-sans">
    {basics.introduction}
  </p>
</header>
